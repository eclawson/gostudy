<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"

    android:weightSum="1">


    <TextView
        android:id="@+id/flashcardFB"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/card2"
        android:layout_weight="0.57"
        android:textSize="23dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:paddingTop="80dp"
        android:lineSpacingExtra="10dp"
        android:text="Press &quot;How To Use&quot; for instructions or press your settings button to get started!"
        android:typeface="monospace" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.26">

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Next Card"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/flip"
            android:layout_width="181dp"
            android:layout_height="match_parent"
            android:text="Flip to Back"
            android:textStyle="bold|italic" />

        <Button
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:text="How To Use"
            android:id="@+id/howtobutton"
            android:textStyle="bold"
            android:textColor="#ffff0003" />

    </LinearLayout>

</LinearLayout><!-- From: file:/Users/chadlawson/Documents/gostudy/app/src/main/res/layout/flashcardscreen.xml -->