<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group5.project.gostudy"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:configChanges="orientation"
        android:screenOrientation="portrait">
        <activity
            android:name="group5.project.gostudy.home"
            android:label="@string/title_activity_flashcard"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="group5.project.gostudy.flashcard"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
        <activity android:name="group5.project.gostudy.howto"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>

        <activity android:name="group5.project.gostudy.viewDecks"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
        <activity android:name="group5.project.gostudy.newCards"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
        <activity android:name="group5.project.gostudy.saveDeck"
            android:configChanges="orientation"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>