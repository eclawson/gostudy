<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"

    >


    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Front of Card"
        android:layout_weight="1"


        android:textStyle="bold|normal|italic"
        android:textSize="30dp"
        android:textColor="#ff0023ff"
        android:gravity="center_vertical|center_horizontal" />


    <TextView
        android:id="@+id/questionView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/card2"
        android:text=""
        android:layout_weight="7.89"
        android:textSize="23dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back Of Card"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffff0500"
        android:textStyle="bold|italic"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/answerView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/card2"
        android:text="" 
        android:layout_weight="10.63"
        android:textSize="23dp"
        android:textStyle="bold"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <Button
            android:id="@+id/hideButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Back of Card"
       		android:layout_weight="1"/>

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Next Card"
       		android:layout_weight="1"/>

        <Button
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:text="How To Use"
            android:id="@+id/howtobutton" />

    </LinearLayout>

</LinearLayout>